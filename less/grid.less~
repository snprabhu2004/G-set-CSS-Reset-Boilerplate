@gutter :1em;

.grid-wrap {
    margin-left: -@gutter;
    overflow: hidden;
    clear: both;
}

.grid-col(@span,@numcols) {
    float: left;
    padding-left: @gutter;
    -webkit-box-sizing: border-box;
       -moz-box-sizing: border-box;
            box-sizing: border-box;
    width: percentage(@span/@numcols);
}

.grid-generator(@span: 12,@numcols: 12) when (@span > 0) {
	@index: 1;	
	(~".span@{index}") { .span(@index); }
	//(~".g-@{span}") {
	//	.grid-col(@span,@numcols);
	//}
	//.grid-generator(@span-1,@numcols);
}

.grid-generator(@numcols,@numcols);

.grid-basic div {
    .grid-col(1,3);
}

.grid-nested div:not(.grid-wrap) {
    .grid-col(1,2);
}
